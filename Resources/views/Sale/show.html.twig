{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}Sale - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            <a href="{{ path('sale') }}"> {{ 'Sale list'|trans({'Sale': 'Sale'}, 'Sale') }}</a>
            /
            {{ 'Sale' | trans({}, 'Sale')}}
        </h1>
    </section>
    <section class="content">    
        <div class="box"  id='showSale'>
            <div class="box-header">
                <div class="box-tools  pull-right">
                            {{ form_start(delete_form) }}
        {{ form_widget(delete_form) }}

        <div class="btn-group record_actions">            <button class="btn btn-link btn-sm" type="submit"> {{ 'Delete'|trans({}, 'Sale') }}</button>
            <input name="modal" type="hidden" value="0">
            
                <a class="btn btn-link  btn-sm" onclick="showEdit(true)">
                    {{ 'Edit'|trans({}, 'Sale') }}
                </a>
</div>
            <input name="modal" type="hidden" value="0">
        {{ form_end(delete_form) }}

</div>
            </div>
            <div class="box-body">
                <table class="table table-hover record_properties">
                    <tbody>                            
                        <tr>
                            <th scope="row">{{'Date'|trans({}, 'Sale')}}</th>
                            <td>{{ sale.date|date('Y-m-d') }}</td>
                        </tr>                            
                        <tr>
                            <th scope="row">{{'Total'|trans({}, 'Sale')}}</th>
                            <td>{{ sale.total }}</td>
                        </tr>                            
                        <tr>
                            <th scope="row">{{'Totalwithtax'|trans({}, 'Sale')}}</th>
                            <td>{{ sale.totalWithTax }}</td>
                        </tr>                            
                        <tr>
                            <th scope="row">{{'Tax'|trans({}, 'Sale')}}</th>
                            <td>{{ sale.tax }}</td>
                        </tr>                            
                        <tr>
                            <th scope="row">{{'Observations'|trans({}, 'Sale')}}</th>
                            <td>{{ sale.observations }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="box-footer">
            
            </div>
        </div>
        <div class="box" id='editFormSale'  style="display: none;">
            <div class="box-header">
                <div class="box-tools">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}
                    <div class="btn-group record_actions">
                        <button class="btn btn-link btn-sm" type="submit"> {{ 'Delete'|trans({}, 'Sale') }}</button>
                        <a class="btn btn-link  btn-sm" onclick="showEdit(false)">
                        {{ 'Cancel'|trans({}, 'Account') }}
                        </a>
                    </div>
                    <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}
                </div>
            </div>
            <div class="box-body">

            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <p>
                    <button class="btn-default btn" type="submit">{{ 'save'|trans | capitalize}}</button>
                </p>
            {{ form_end(edit_form) }}
            </div>
            <div class="box-footer">
            </div>
        </div>
    </section>

        <div class="btn-group record_actions"></div>

        <div id="delete_confirm" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h3>{{ 'Confirm delete'|trans({}, 'Sale') }}</h3>
                    </div>
                    <div class="modal-body">
                        <p>{{ 'You are about to delete an item'|trans({}, 'Sale') }}, {{ 'this procedure is irreversible'|trans({}, 'Sale') }}.</p>
                        <p>{{ 'Do you want to proceed?'|trans({}, 'Sale') }}</p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger">{{ 'Yes'|trans({}, 'Sale') }}</button>
                        <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'Sale') }}</button>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
{% block javascripts %}

    {{ parent() }}
    <script type="text/javascript">
        function showEdit(show){
            if(show){
                $('#showSale').hide();
                $('#editFormSale').show();
            }else{
                $('#showSale').show();
                $('#editFormSale').hide();
            }
        }
        
    </script>
{% endblock %}